generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums

enum Role {
  ADMIN
  MEMBER
}

enum AccountType {
  CHECKING
  SAVINGS
  INVESTMENT
  WALLET
}

enum CategoryType {
  INCOME
  EXPENSE
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum TransactionStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentMethod {
  CREDIT
  DEBIT
  PIX
  CASH
}

enum DebtType {
  FINANCING
  LOAN
  CREDIT_CARD
  OTHER
}

enum GoalType {
  EMERGENCY
  TRAVEL
  PURCHASE
  INVESTMENT
  OTHER
}

enum ReserveType {
  EMERGENCY
  SHORT_TERM
  MEDIUM_TERM
  LONG_TERM
}

enum AmortizationType {
  SAC
  PRICE
}


enum NotificationType {
  BILL_DUE_SOON
  BILL_OVERDUE
  CARD_CLOSING_SOON
  CARD_DUE_SOON
  CARD_LIMIT_WARNING
  UNUSUAL_SPENDING
  GOAL_MILESTONE
  GOAL_ACHIEVED
  MONTHLY_SUMMARY
  WEEKLY_SUMMARY
}

// Models

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  avatar    String?
  phoneNumber String?
  role      Role     @default(MEMBER)
  familyId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  family            Family             @relation(fields: [familyId], references: [id])
  ownedAccounts     Account[]
  transactions      Transaction[]
  cards             Card[]
  debts             Debt[]
  goalContributions GoalContribution[]

  notifications     Notification[]
  notificationPreferences NotificationPreference[]
  refreshTokens     RefreshToken[]

  @@map("users")
}

model Family {
  id        String   @id @default(uuid())
  name      String
  settings  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users      User[]
  accounts   Account[]
  categories Category[]
  goals      Goal[]
  reserves   Reserve[]
  debts      Debt[]

  @@map("families")
}

model Account {
  id        String      @id @default(uuid())
  name      String
  type      AccountType
  balance   Decimal     @default(0) @db.Decimal(10, 2)
  color     String?
  isActive  Boolean     @default(true)
  familyId  String
  userId    String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  family       Family        @relation(fields: [familyId], references: [id])
  owner        User          @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@map("accounts")
}

model Category {
  id        String       @id @default(uuid())
  name      String
  type      CategoryType
  icon      String?
  color     String?
  parentId  String?
  familyId  String
  isDefault Boolean      @default(false)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  parent         Category?     @relation("SubCategories", fields: [parentId], references: [id])
  children       Category[]    @relation("SubCategories")
  family         Family        @relation(fields: [familyId], references: [id])
  transactions   Transaction[]
  goal           Goal[] // Goals typically map to categories (e.g. Travel goal linked to Travel category)
  
  @@map("categories")
}

model Transaction {
  id            String            @id @default(uuid())
  amount        Decimal           @db.Decimal(10, 2)
  type          TransactionType
  description   String
  date          DateTime
  status        TransactionStatus @default(PENDING)
  paymentMethod PaymentMethod
  isRecurring   Boolean           @default(false)
  recurringType String? // Could be an enum (MONTHLY, WEEKLY) or string definition (CRON)
  accountId     String
  categoryId    String?
  userId        String
  cardId        String?
  tags          String[]
  notes         String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  account      Account      @relation(fields: [accountId], references: [id])
  category     Category?    @relation(fields: [categoryId], references: [id])
  user         User         @relation(fields: [userId], references: [id])
  card         Card?        @relation(fields: [cardId], references: [id])
  installmentId String?
  installment   Installment? @relation(fields: [installmentId], references: [id])

  @@index([date])
  @@index([status])
  @@index([categoryId])
  @@map("transactions")
}

model Card {
  id             String   @id @default(uuid())
  name           String
  brand          String
  lastFourDigits String
  creditLimit    Decimal  @db.Decimal(10, 2)
  closingDay     Int
  dueDay         Int
  isActive       Boolean  @default(true)
  color          String?
  userId         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]
  installments Installment[]

  @@map("cards")
}

model Installment {
  id                 String   @id @default(uuid())
  description        String
  totalAmount        Decimal  @db.Decimal(10, 2)
  totalInstallments  Int
  startDate          DateTime
  cardId             String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  card         Card          @relation(fields: [cardId], references: [id])
  transactions Transaction[]

  @@map("installments")
}

model Debt {
  id                String            @id @default(uuid())
  name              String
  type              DebtType
  totalAmount       Decimal           @db.Decimal(12, 2)
  interestRate      Decimal           @db.Decimal(5, 2) // Monthly %
  totalInstallments Int
  paidInstallments  Int               @default(0)
  startDate         DateTime
  dueDay            Int
  amortizationType  AmortizationType? @default(SAC) // Optional for existing, but required for logic
  notes             String?
  familyId          String
  userId            String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  family Family @relation(fields: [familyId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@map("debts")
}

model Goal {
  id            String   @id @default(uuid())
  name          String
  type          GoalType
  targetAmount  Decimal  @db.Decimal(12, 2)
  currentAmount Decimal  @default(0) @db.Decimal(12, 2)
  deadline      DateTime?
  icon          String?
  color         String?
  familyId      String
  categoryId    String? // Optional link to a category
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  family        Family             @relation(fields: [familyId], references: [id])
  category      Category?          @relation(fields: [categoryId], references: [id])
  contributions GoalContribution[]

  @@map("goals")
}

model GoalContribution {
  id        String   @id @default(uuid())
  amount    Decimal  @db.Decimal(10, 2)
  date      DateTime
  goalId    String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  goal Goal @relation(fields: [goalId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@map("goal_contributions")
}

model Reserve {
  id             String      @id @default(uuid())
  name           String
  type           ReserveType
  balance        Decimal     @default(0) @db.Decimal(12, 2)
  color          String?
  expectedReturn Decimal?    @db.Decimal(5, 2)
  familyId       String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  family Family @relation(fields: [familyId], references: [id])

  @@map("reserves")
}

model Notification {
  id        String           @id @default(uuid())
  type      NotificationType
  title     String
  message   String
  isRead    Boolean          @default(false)
  userId    String
  metadata  Json?
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("notifications")
}

model NotificationPreference {
  id        String   @id @default(uuid())
  userId    String   @unique
  email     Boolean  @default(true)
  push      Boolean  @default(true)
  inApp     Boolean  @default(true)
  whatsapp  Boolean  @default(true)
  
  // Could be granular per type, but requirement says "type (enum)" in table description? 
  // "userId, type (enum), email, push...". 
  // This implies one row per user per type? Or one row per user with global settings?
  // The prompt says "Tabela NotificationPreference: userId, type (enum)...". 
  // This strongly suggests MULTIPLE rows per user (one for each type).
  // But usually preferences are simpler. Let's follow the "type (enum)" instruction.
  type      NotificationType

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, type])
  @@map("notification_preferences")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  isRevoked Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("refresh_tokens")
}
